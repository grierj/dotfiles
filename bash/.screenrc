# Disable the startup message
startup_message off
# Window list at the bottom of the screen with the current window highlighted
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'

# Default utf8
defutf8 on

# Use a bash login shell by default
defshell -bash
